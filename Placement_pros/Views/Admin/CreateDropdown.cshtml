@model Core.VeiwModel.CreateDropDownViewModel

@{
    ViewData["Title"] = "CreateDropdown";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid  mt-5">
    <div class="row">
        <div class="col-6 m-auto">

            <div class="card shadow ">
                <div class="card-header bg-primary">
                    <h3 class="text-white text-center">Create Dropdown</h3>
                </div>

                <div class=" col-10 card-body py-4 mx-auto">
                    <form asp-controller="Admin" asp-action="CreateDropdown" method="post">
                        <div class="row">

                            <div class="col-md-12 p-1">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" class="form-control" type="text" name="name" placeholder="Name" style="border:none; outline:none; background-color:#f5f5f5;" required>
                                <div class="valid-feedback">Name field is valid!</div>
                                <div class="invalid-feedback">Name field cannot be blank!</div>
                            </div>

                            <div class="col-md-12 mt-2">

                                <label> Dropdown</label>
                                <select asp-for="DropdownId" asp-items="@(new SelectList(ViewBag.dropdown  ,"Id", "Name" ))" class="form-control" aria-label="Default select example " style="border:none; outline:none; background-color:#f5f5f5;">
                                </select>


                            </div>

                            <div class="  form-button mt-3 mx-auto">
                                <button id="submit" type="submit" class="btn btn-info">Submit</button>
                            </div>

                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
