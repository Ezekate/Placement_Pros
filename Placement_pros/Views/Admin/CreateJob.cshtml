@model Core.VeiwModel.JobVeiwModel

@{
    ViewData["Title"] = "CreateJob";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-8 m-auto">
            @if (TempData["Message"] != null)
            {
                var tempDatamessage = (Core.Models.Message)TempData["Message"];
                <partial name="_Message" model="tempDatamessage" />
            }
            <div class="card shadow ">
                <div class="card-header bg-primary">
                    <h3 class="text-white text-center">Create Job</h3>
                </div>
                <div class=" col-10 card-body py-3 mx-auto">
                    <form asp-controller="Admin" asp-action="CreateJob" method="post">
                        <div class="row">
                            <div class="col-md-6 p-1">
                                <label asp-for="CompanyName"> CompanyName</label>
                                <input asp-for="CompanyName" class="form-control" type="text" placeholder="CompanyName" style="border:none; outline:none; background-color:#f5f5f5; " >
                            </div>
                            <div class="col-md-6 p-1">
                                <label asp-for="Title"> Title</label>
                                <input asp-for="Title" class="form-control" type="text" placeholder="JobName" style="border:none; outline:none; background-color:#f5f5f5;" >
                            </div>
                            <div class="col-md-6 p-1">
                                <label asp-for="Location"> Location</label>
                                <input asp-for="Location" class="form-control" type="text" placeholder="Location" style="border:none; outline:none; background-color:#f5f5f5;" >
                            </div>
                            <div class="col-md-6 p-1">
                                <label asp-for="Salary"> Salary</label>
                                <input asp-for="Salary" class="form-control" type="text" placeholder="Salary" style="border:none; outline:none; background-color:#f5f5f5;" >
                                <div class="valid-feedback">Name field is valid!</div>
                            </div>
                            <div class="col-md-12 p-1">
                                <label>Jobtype </label>
                                <select asp-for="JobType" class="form-control" asp-items="@(new SelectList(@ViewBag.dropdown, "Id", "Name"))" style="border:none; outline:none; background-color:#f5f5f5;" >
                                </select>
                            </div>
                            @*<div class="col-md-6 mb-1">
                            <label>UploadPicture</label>
                            <input id="picture" class="form-control" name="text" type="file" onchange="ConvertPictureToBase64(event)" style="border:none; outline:none; background-color:#f5f5f5;">
                        </div>*@

                            <div class="col-md-12 p-1">
                                <label asp-for="Discription">Discription</label>
                                <textarea asp-for="Discription" class="form-control summernote" type="text" placeholder="Job discription" style="border:none; outline:none; background-color:#f5f5f5;"></textarea>
                            </div>

                            <div class="col-12 p-1">
                                <label asp-for="Requirement">Requirement</label>
                                <textarea asp-for="Requirement" class="form-control summernote" type="text" placeholder="Job requirement " style="border:none; outline:none; background-color:#f5f5f5;"></textarea>
                            </div>


                            <div class="  form-button mt-3 mx-auto">
                                <button id="submit" type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



